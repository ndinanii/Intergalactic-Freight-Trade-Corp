<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants Operations Managers full access to Shipment, Cargo, and Customs Document objects with complete field-level permissions</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Operations Manager Access</label>
    
    <!-- Shipment Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Shipment__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Cargo Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Cargo__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Customs Document Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>true</modifyAllRecords>
        <object>Customs_Document__c</object>
        <viewAllRecords>true</viewAllRecords>
    </objectPermissions>
    
    <!-- Shipment Field Permissions (Full Access) -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.AccountId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.ContactId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.OpportunityId__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.ETA__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.Departure_Date__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.Discount__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Shipment__c.Assigned_Agent__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Cargo Field Permissions (Full Access) -->
    <!-- Note: Shipment__c is a required master-detail field, permissions inherited from object -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Cargo__c.Category__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Cargo__c.Weight__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Cargo__c.Shipping_Method__c</field>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Customs Document Field Permissions (Full Access) -->
    <!-- Note: Shipment__c and Cargo__c are required master-detail fields, permissions inherited from object -->
    
    <!-- Tab Visibility -->
    <tabSettings>
        <tab>Shipment__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>Cargo__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
    <tabSettings>
        <tab>Customs_Document__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
